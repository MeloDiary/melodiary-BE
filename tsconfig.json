{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"],
    "outDir": "./build",
    "rootDir": "."
  },
  "include": ["src/**/*.ts", "types/**/*.ts", "app.ts"],
  "exclude": ["node_modules", "build"]
}
